<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.uudigitalhumanitieslab.doordenkertjes" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Doordenkertjes</name>
    <description>
        Reflecteer op ethische vragen in de kinderdagopvang.
    </description>
    <author email="digitalhumanities@uu.nl" href="http://digitalhumanities.wp.hum.uu.nl">
        Digital Humanities Lab, Universiteit Utrecht
    </author>
    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="5.1.1" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="11" />
    <preference name="android-installLocation" value="auto" />
    <icon src="www/icon.png" />
    <platform name="android">
        <icon src="www/res/icon/android/icon-36-ldpi.png" density="ldpi" />
        <icon src="www/res/icon/android/icon-48-mdpi.png" density="mdpi" />
        <icon src="www/res/icon/android/icon-72-hdpi.png" density="hdpi" />
        <icon src="www/res/icon/android/icon-96-xhdpi.png" density="xhdpi" />
        <splash src="www/res/screen/android/screen-ldpi-portrait.jpg" density="port-ldpi" />
        <splash src="www/res/screen/android/screen-mdpi-portrait.jpg" density="port-mdpi" />
        <splash src="www/res/screen/android/screen-hdpi-portrait.jpg" density="port-hdpi" />
        <splash src="www/res/screen/android/screen-xhdpi-portrait.jpg" density="port-xhdpi" />
    </platform>
    <platform name="ios">
        <icon src="www/res/icon/ios/icon-57.png" height="57" width="57" />
        <icon src="www/res/icon/ios/icon-72.png" height="72" width="72" />
        <icon src="www/res/icon/ios/icon-57-2x.png" height="114" width="114" />
        <icon src="www/res/icon/ios/icon-72-2x.png" height="144" width="144" />
        <splash src="www/res/screen/ios/screen-iphone-portrait.jpg" width="320" height="480" />
        <splash src="www/res/screen/ios/screen-iphone-portrait-2x.jpg" width="640" height="960" />
        <splash src="www/res/screen/ios/screen-iphone-portrait-568h-2x.jpg" width="640" height="768" />
        <splash src="www/res/screen/ios/screen-ipad-portrait.jpg" width="768" height="1136" />
        <splash src="www/res/screen/ios/screen-ipad-landscape.jpg" width="1024" height="1024" />
    </platform>
    <access origin="*" />
</widget>
